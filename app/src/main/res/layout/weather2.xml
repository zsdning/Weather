    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <RelativeLayout
            android:id="@+id/rl_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="北京"
                android:textColor="@color/text_color" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_city"
                android:layout_alignTop="@+id/tv_city"
                android:layout_toRightOf="@+id/tv_city"
                android:padding="4dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="14:00发布"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <ImageView
                android:id="@+id/iv_now_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d00" />
            <TextView
                android:id="@+id/tv_now_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:text="晴"
                android:textColor="@color/text_color"
                android:textSize="24sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_today_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="22 13"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/tv_now_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20"
                android:textSize="48sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wireframe_light"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="PM2.5"
                    android:textColor="@color/text_color" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="288"
                        android:textColor="@color/text_color" />
                    <TextView
                        android:id="@+id/quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:gravity="right"
                        android:text="重度污染"
                        android:textColor="@color/text_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/wireframe_dark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forecast"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="4dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView android:id="@+id/tv_next_three"
                    style="@style/TextViewStyle"
                    android:text="上午7时"
                    />
                <TextView android:id="@+id/tv_next_six"
                    style="@style/TextViewStyle"
                    android:text="上午7时"
                    />
                <TextView android:id="@+id/tv_next_nine"
                    style="@style/TextViewStyle"
                    android:text="上午7时"
                    />
                <TextView android:id="@+id/tv_next_twelve"
                    style="@style/TextViewStyle"
                    android:text="上午7时"
                    />
                <TextView android:id="@+id/tv_next_fifteen"
                    style="@style/TextViewStyle"
                    android:text="上午7时"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_next_three"
                    style="@style/ViewStyle"
                    android:src="@drawable/d01"
                    />
                <ImageView android:id="@+id/iv_next_six"
                    style="@style/ViewStyle"
                    android:src="@drawable/d01"
                    />
                <ImageView android:id="@+id/iv_next_nine"
                    style="@style/ViewStyle"
                    android:src="@drawable/d01"
                    />
                <ImageView android:id="@+id/iv_next_twelve"
                    style="@style/ViewStyle"
                    android:src="@drawable/d01"
                    />
                <ImageView android:id="@+id/iv_next_fifteen"
                    style="@style/ViewStyle"
                    android:src="@drawable/d01"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView android:id="@+id/temp_next_three"
                    style="@style/TextViewStyle"
                    android:text="20"
                    />
                <TextView android:id="@+id/temp_next_six"
                    style="@style/TextViewStyle"
                    android:text="20"
                    />
                <TextView android:id="@+id/temp_next_nine"
                    style="@style/TextViewStyle"
                    android:text="20"
                    />
                <TextView android:id="@+id/temp_next_twelve"
                    style="@style/TextViewStyle"
                    android:text="20"
                    />
                <TextView android:id="@+id/temp_next_fifteen"
                    style="@style/TextViewStyle"
                    android:text="20"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/today"
                    style="@style/TextViewStyle"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/today"
                    />
                <ImageView android:id="@+id/today_weather"
                    style="@style/ViewStyle"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:src="@drawable/d01"
                    />
                <TextView
                    android:id="@+id/today_temp_a"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
                <TextView
                    android:id="@+id/today_temp_b"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tomorrow"
                    style="@style/TextViewStyle"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/tomorrow"
                    />
                <ImageView android:id="@+id/tomorrow_weather"
                    style="@style/ViewStyle"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:src="@drawable/d01"
                    />
                <TextView
                    android:id="@+id/tomorrow_temp_a"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
                <TextView
                    android:id="@+id/tomorrow_temp_b"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/third"
                    style="@style/TextViewStyle"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/third"
                    />
                <ImageView android:id="@+id/third_weather"
                    style="@style/ViewStyle"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:src="@drawable/d01"
                    />
                <TextView
                    android:id="@+id/third_temp_a"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
                <TextView
                    android:id="@+id/third_temp_b"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/forth"
                    style="@style/TextViewStyle"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/forth"
                    />
                <ImageView android:id="@+id/forth_weather"
                    style="@style/ViewStyle"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:src="@drawable/d01"
                    />
                <TextView
                    android:id="@+id/forth_temp_a"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
                <TextView
                    android:id="@+id/forth_temp_b"
                    style="@style/TextViewStyle"
                    android:layout_weight="4"
                    android:text="20"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wireframe_dark"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/dark_grey"
                android:text="@string/information"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/wireframe_light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/felt_air_temp"/>
                <TextView
                    android:id="@+id/felt_air_temp"
                    style="@style/TextViewStyle"
                    android:paddingRight="30dp"
                    android:text="16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/wireframe_light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/humidity"/>
                <TextView
                    android:id="@+id/humidity"
                    style="@style/TextViewStyle"
                    android:paddingRight="12dp"
                    android:text="40%"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/wireframe_light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/wind"/>
                <TextView
                    android:id="@+id/wind"
                    style="@style/TextViewStyle"
                    android:paddingRight="20dp"
                    android:text="40%"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/wireframe_light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/uv_index"/>
                <TextView
                    android:id="@+id/uv_index"
                    style="@style/TextViewStyle"
                    android:paddingRight="24dp"
                    android:text="40%"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/wireframe_light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="@string/dressing_index"/>
                <TextView
                    android:id="@+id/dressing_index"
                    style="@style/TextViewStyle"
                    android:paddingRight="20dp"
                    android:text="40%"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

